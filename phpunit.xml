<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
        >
    <testsuites>
        <testsuite name="Composer Modman testsuite">
            <directory>./tests/Composer/Modman/Test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/Composer/Modman/</directory>
        </whitelist>
    </filter>
</phpunit>